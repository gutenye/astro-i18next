#!/usr/bin/env script.js

await mixins("package-manager", "test");

globalThis.PACKAGE_MANAGER = "bun";

const HELP = `
`;

app.name(PROJECT_NAME).enableCompletion().addHelpText("after", HELP.trimEnd());

app.command("start", { isDefault: true }).action(async () => {
  $`tandem "tsc --project tsconfig.build.json --watch" "tsc-alias --project tsconfig.build.json --watch" "chokidar --initial build -c 'yalc push'"`;
});
